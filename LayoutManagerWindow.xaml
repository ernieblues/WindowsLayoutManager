<Window x:Class="WindowsLayoutManager.LayoutManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsLayoutManager"
        mc:Ignorable="d"
        Title="LayoutManagerWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Left: buttons -->
            <ColumnDefinition Width="200"/>
            <!-- Right: main content -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: controls -->
        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10, 10, 10, 10">
            <Label Content="Layout Name:"/>
            <TextBox x:Name="LayoutNameInput" Height="25" VerticalContentAlignment="Center"/>
            <Button Content="Save Layout" Height="25" Margin="0,10,0,0" Click="SaveLayout_Click"/>
            <Button Content="Delete Layout" Height="25" Margin="0,10,0,0" Click="DeleteLayout_Click"/>
            <Button x:Name="RestoreLayoutButton" Content="Restore Layout" Height="25" Margin="0,10,0,0" Click="RestoreLayout_Click"  IsEnabled="False"/>
        </StackPanel>

        <!-- Right: list of layouts -->
        <ListView x:Name="LayoutListView" SelectionMode="Single" Grid.Column="1" Margin="0,10,10,10" SelectionChanged="LayoutListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Layout Name" Width="200"
                            DisplayMemberBinding="{Binding LayoutName}" />
                    <GridViewColumn Header="Window Count" Width="100"
                            DisplayMemberBinding="{Binding Windows.Count}" />
                    <GridViewColumn Header="Saved On" Width="150"
                            DisplayMemberBinding="{Binding LayoutDate}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
